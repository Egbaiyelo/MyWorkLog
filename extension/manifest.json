{
    "manifest_version": 3,
    "name": "MyWorkLog-dev-0.0",
    "version": "0.1.0",
    "description": "testing myWorkLog",
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.myworkdayjobs.com/*"
            ],
            "js": [
                "dist/content.bundle.js"
            ],
            "type": "module",
            "run_at": "document_idle"
        }
    ],
    "permissions": [
        "storage",
        "scripting",
        "activeTab",
        "tabs",
        "nativeMessaging"
    ],
    "host_permissions": [
        "https://*.myworkdayjobs.com/*",
        "https://www.google.com/s2/favicons*"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "icons/*",
                "pages/*",
                "files/*",
                "assets/*.png",
                "icons/*.png"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}